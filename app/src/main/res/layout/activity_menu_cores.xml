<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ColorMenu">

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/buttonCorAzul"
    android:text="Azul"
    android:layout_centerHorizontal="true"
    android:onClick="onButtonClick"
    android:tag="AZUL"
    style="@style/botaoAzul"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCorAmarelo"
        android:text="Amarelo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCorAzul"
        android:onClick="onButtonClick"
        android:tag="AMARELO"
        style="@style/botaoAmarelo"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCorVerde"
        android:text="Verde"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCorAmarelo"
        android:onClick="onButtonClick"
        android:tag="VERDE"
        style="@style/botaoVerde"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCorPreto"
        android:text="Preto"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCorVerde"
        android:onClick="onButtonClick"
        android:tag="PRETO"
        style="@style/botaoPreto"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCorRosa"
        android:text="Rosa"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCorPreto"
        android:onClick="onButtonClick"
        android:tag="ROSA"
        style="@style/botaoRosa"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCorMarrom"
        android:text="Marrom"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCorRosa"
        android:onClick="onButtonClick"
        android:tag="MARROM"
        style="@style/botaoMarrom"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCorBranco"
        android:text="Branco"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCorMarrom"
        android:onClick="onButtonClick"
        android:tag="BRANCO"
        style="@style/botaoBranco"/>

</RelativeLayout>
